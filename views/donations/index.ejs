<!DOCTYPE html>
<html>
<head>
    <title>Donations - Ella Rises</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>
<body class="dashboard-body">
    <%- include('../partials/navbar') %>

    <main class="page-container">
        <div class="page-header">
            <div>
                <h1>Donation Records</h1>
                <p class="page-subtitle">View all donations received</p>
            </div>
            <div class="header-actions">
                <div class="stats-badge">
                    Total: $<%= totalDonations.toLocaleString('en-US', {minimumFractionDigits: 2}) %>
                </div>
                <a href="/donations/add" class="btn-add">+ Add Donation</a>
            </div>
        </div>

        <!-- Search Bar -->
        <form class="search-bar" method="GET" action="/donations" id="searchForm">
            <i class="fas fa-search search-icon"></i>
            <input type="text" name="search" id="searchInput" placeholder="Search by donor name or email..." value="<%= typeof search !== 'undefined' ? search : '' %>">
            <% if (typeof search !== 'undefined' && search) { %>
                <a href="/donations" class="search-clear">Clear</a>
            <% } %>
            <span class="search-count"><%= totalItems %> donations<%= (typeof search !== 'undefined' && search) ? ' found' : '' %></span>
        </form>
        <script>
            let searchTimeout;
            document.getElementById('searchInput').addEventListener('input', function() {
                clearTimeout(searchTimeout);
                searchTimeout = setTimeout(() => {
                    document.getElementById('searchForm').submit();
                }, 400);
            });
        </script>

        <% if (donations.length === 0) { %>
            <div class="empty-state">
                <p>No donations found<%= (typeof search !== 'undefined' && search) ? ' matching "' + search + '"' : '' %>.</p>
                <% if (typeof search !== 'undefined' && search) { %>
                    <p><a href="/donations">Clear search</a></p>
                <% } %>
            </div>
        <% } else { %>
            <div class="table-wrapper">
                <table class="data-table" id="donationsTable">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Donor</th>
                            <th>Email</th>
                            <th>Amount</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% donations.forEach(donation => { %>
                            <tr>
                                <td><%= donation.donation_date ? new Date(donation.donation_date).toLocaleDateString() : '-' %></td>
                                <td><%= donation.participant_first_name && donation.participant_last_name ? donation.participant_first_name + ' ' + donation.participant_last_name : 'Anonymous' %></td>
                                <td><%= donation.participant_email || '-' %></td>
                                <td class="amount">$<%= parseFloat(donation.donation_amount).toFixed(2) %></td>
                                <td class="actions">
                                    <a href="/donations/edit/<%= donation.donation_id %>" class="btn-edit">Edit</a>
                                    <form action="/donations/delete/<%= donation.donation_id %>" method="POST" class="inline-form" onsubmit="return confirm('Delete this record?');">
                                        <button type="submit" class="btn-delete">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            <% if (totalPages > 1) { %>
                <% const searchParam = (typeof search !== 'undefined' && search) ? `&search=${encodeURIComponent(search)}` : ''; %>
                <div class="pagination">
                    <% if (currentPage > 1) { %>
                        <a href="/donations?page=<%= currentPage - 1 %><%= searchParam %>" class="pagination-btn"><i class="fas fa-chevron-left"></i> Previous</a>
                    <% } %>
                    
                    <span class="page-info">Page <%= currentPage %> of <%= totalPages %></span>
                    
                    <% if (currentPage < totalPages) { %>
                        <a href="/donations?page=<%= currentPage + 1 %><%= searchParam %>" class="pagination-btn">Next <i class="fas fa-chevron-right"></i></a>
                    <% } %>
                </div>
            <% } %>
        <% } %>
    </main>

    <%- include('../partials/footer') %>
</body>
</html>
