<!DOCTYPE html>
<html>
<head>
    <title>Donations - Ella Rises</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body class="dashboard-body">
    <%- include('../partials/navbar') %>

    <main class="page-container">
        <div class="page-header">
            <div>
                <h1>Donation Records</h1>
                <p class="page-subtitle">View all donations received</p>
            </div>
            <div class="stats-badge">
                Total: $<%= totalDonations.toLocaleString('en-US', {minimumFractionDigits: 2}) %>
            </div>
        </div>

        <% if (donations.length === 0) { %>
            <div class="empty-state">
                <p>No donations recorded yet.</p>
            </div>
        <% } else { %>
            <div class="table-wrapper">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Donor</th>
                            <th>Email</th>
                            <th>Amount</th>
                            <th>Message</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% donations.forEach(donation => { %>
                            <tr>
                                <td><%= donation.date %></td>
                                <td><%= donation.donor_name %></td>
                                <td><%= donation.email %></td>
                                <td class="amount">$<%= donation.amount.toFixed(2) %></td>
                                <td class="message-cell"><%= donation.message || '-' %></td>
                                <td class="actions">
                                    <form action="/donations/delete/<%= donation.id %>" method="POST" class="inline-form" onsubmit="return confirm('Delete this record?');">
                                        <button type="submit" class="btn-delete">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        <% } %>
    </main>

    <%- include('../partials/footer') %>
</body>
</html>

