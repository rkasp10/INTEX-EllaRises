<!-- Edit Event (manager): update an event occurrence (template, schedule,
     location, capacity, and registration deadline). -->
<!DOCTYPE html>
<html>
<head>
    <title>Edit Event - Ella Rises</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body class="dashboard-body">
    <%- include('../partials/navbar') %>

    <main class="page-container">
        <div class="form-page-wrapper">
            <div class="page-header">
                <h1>Edit Event</h1>
            </div>

            <div class="form-card">
            <form action="/events/edit/<%= event.occurrence_id %>" method="POST" class="crud-form">
                <div class="form-group">
                    <label for="template_id">Event Template</label>
                    <select id="template_id" name="template_id" required>
                        <% if (templates && templates.length > 0) { %>
                            <% templates.forEach(t => { %>
                                <option value="<%= t.template_id %>" <%= event.template_id === t.template_id ? 'selected' : '' %>><%= t.event_name %> (<%= t.event_type %>)</option>
                            <% }) %>
                        <% } %>
                    </select>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="event_datetime_start">Start Date & Time</label>
                        <input type="datetime-local" id="event_datetime_start" name="event_datetime_start" 
                            value="<%= event.event_datetime_start ? new Date(event.event_datetime_start).toISOString().slice(0,16) : '' %>" required>
                    </div>
                    <div class="form-group">
                        <label for="event_datetime_end">End Date & Time</label>
                        <input type="datetime-local" id="event_datetime_end" name="event_datetime_end"
                            value="<%= event.event_datetime_end ? new Date(event.event_datetime_end).toISOString().slice(0,16) : '' %>" required>
                    </div>
                </div>

                <div class="form-group">
                    <label for="event_location">Location</label>
                    <input type="text" id="event_location" name="event_location" value="<%= event.event_location %>" required>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="event_capacity">Capacity</label>
                        <input type="number" id="event_capacity" name="event_capacity" min="1" value="<%= event.event_capacity %>" required>
                    </div>
                    <div class="form-group">
                        <label for="event_registration_deadline">Registration Deadline</label>
                        <input type="datetime-local" id="event_registration_deadline" name="event_registration_deadline"
                            value="<%= event.event_registration_deadline ? new Date(event.event_registration_deadline).toISOString().slice(0,16) : '' %>">
                    </div>
                </div>

                <div class="form-actions">
                    <a href="/events" class="btn-cancel">Cancel</a>
                    <button type="submit" class="btn-submit">Save Changes</button>
                </div>
                </form>
            </div>
        </div>
    </main>

    <%- include('../partials/footer') %>
</body>
</html>
