<!-- This is the index page that is displayed after a user logs in. -->
<!-- The page is dynamic displaying what is appropriate for the user's role. -->
<!-- Has links to all of the other pages in the application. (participants/profile, events, etc.) -->

<!DOCTYPE html>
<html>
<head>
    <title>Ella Rises - Dashboard</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>
<body class="dashboard-body">
    <!-- Header Bar -->
    <header class="dashboard-header">
        <div class="dashboard-header-inner">
            <a href="/" class="dashboard-logo-link">
                <img src="/css/images/logo.png" alt="Ella Rises" class="dashboard-logo">
            </a>
            <div class="dashboard-header-right">
                <div class="dashboard-user-info">
                    <% if (currentUser.level === 'M') { %>
                        <span class="role-badge-header manager">Manager</span>
                    <% } else { %>
                        <span class="role-badge-header member">Member</span>
                    <% } %>
                    <span class="dashboard-username"><%= currentUser.name || currentUser.username %></span>
                </div>
                <form action="/logout" method="POST" style="display:inline;">
                    <button type="submit" class="dashboard-logout-btn">
                        <i class="fas fa-sign-out-alt"></i> Logout
                    </button>
                </form>
            </div>
        </div>
    </header>

    <main class="dashboard-main">
        <!-- Welcome Section with Image -->
        <div class="dashboard-welcome-section">
            <div class="dashboard-welcome-image">
                <img src="/css/images/EllaRisesDrawing.jpg" alt="Ella Rises">
            </div>
            <div class="dashboard-welcome-text">
                <h1>Welcome, <%= currentUser.name || currentUser.username %></h1>
                <p>
                    <% if (currentUser.level === 'M') { %>
                        You have full access to view and manage all program data.
                    <% } else { %>
                        Explore events, complete surveys, and track your progress.
                    <% } %>
                </p>
                <% if (currentUser.level === 'M') { %>
                    <a href="/analytics" class="analytics-link">
                        <i class="fas fa-chart-bar"></i> View Analytics Dashboard
                    </a>
                <% } %>
            </div>
        </div>

        <!-- Navigation Hub -->
        <div class="nav-hub-header">
            <h2 class="nav-hub-title">Navigate</h2>
            <div class="nav-hub-divider"></div>
        </div>
        
        <div class="nav-hub">
            <% if (currentUser.level === 'M') { %>
                <!-- MANAGER VIEW -->
                <a href="/participants" class="nav-hub-card">
                    <div class="nav-hub-icon-wrap" style="background-color: var(--pink-light);">
                        <i class="fas fa-users"></i>
                    </div>
                    <div class="nav-hub-text">
                        <span class="nav-hub-label">Participants</span>
                        <span class="nav-hub-desc">View & manage all participants</span>
                    </div>
                </a>

                <a href="/events" class="nav-hub-card">
                    <div class="nav-hub-icon-wrap" style="background-color: var(--blue);">
                        <i class="fas fa-calendar-alt"></i>
                    </div>
                    <div class="nav-hub-text">
                        <span class="nav-hub-label">Events</span>
                        <span class="nav-hub-desc">Manage workshops & activities</span>
                    </div>
                </a>

                <a href="/surveys" class="nav-hub-card">
                    <div class="nav-hub-icon-wrap" style="background-color: var(--peach);">
                        <i class="fas fa-clipboard-list"></i>
                    </div>
                    <div class="nav-hub-text">
                        <span class="nav-hub-label">Surveys</span>
                        <span class="nav-hub-desc">View all survey responses</span>
                    </div>
                </a>

                <a href="/milestones" class="nav-hub-card">
                    <div class="nav-hub-icon-wrap" style="background-color: var(--sage);">
                        <i class="fas fa-trophy"></i>
                    </div>
                    <div class="nav-hub-text">
                        <span class="nav-hub-label">Milestones</span>
                        <span class="nav-hub-desc">Manage participant milestones</span>
                    </div>
                </a>

                <a href="/donations" class="nav-hub-card">
                    <div class="nav-hub-icon-wrap" style="background-color: var(--pink-mid);">
                        <i class="fas fa-heart"></i>
                    </div>
                    <div class="nav-hub-text">
                        <span class="nav-hub-label">Donations</span>
                        <span class="nav-hub-desc">View donation records</span>
                    </div>
                </a>

                <a href="/users" class="nav-hub-card">
                    <div class="nav-hub-icon-wrap" style="background-color: var(--purple);">
                        <i class="fas fa-cog"></i>
                    </div>
                    <div class="nav-hub-text">
                        <span class="nav-hub-label">Users</span>
                        <span class="nav-hub-desc">Manage system accounts</span>
                    </div>
                </a>

            <% } else { %>
                <!-- PARTICIPANT VIEW -->
                <!-- Row 1 -->
                <a href="/participants" class="nav-hub-card">
                    <div class="nav-hub-icon-wrap" style="background-color: var(--pink-light);">
                        <i class="fas fa-user"></i>
                    </div>
                    <div class="nav-hub-text">
                        <span class="nav-hub-label">Profile</span>
                        <span class="nav-hub-desc">View your profile</span>
                    </div>
                </a>

                <a href="/events" class="nav-hub-card">
                    <div class="nav-hub-icon-wrap" style="background-color: var(--blue);">
                        <i class="fas fa-calendar-check"></i>
                    </div>
                    <div class="nav-hub-text">
                        <span class="nav-hub-label">My Events</span>
                        <span class="nav-hub-desc">View your registered events</span>
                    </div>
                </a>

                <!-- Row 2 -->
                <a href="/surveys" class="nav-hub-card">
                    <div class="nav-hub-icon-wrap" style="background-color: var(--peach);">
                        <i class="fas fa-clipboard-list"></i>
                    </div>
                    <div class="nav-hub-text">
                        <span class="nav-hub-label">Surveys</span>
                        <span class="nav-hub-desc">Complete your surveys</span>
                    </div>
                </a>

                <a href="/events/browse" class="nav-hub-card">
                    <div class="nav-hub-icon-wrap" style="background-color: var(--sage);">
                        <i class="fas fa-search"></i>
                    </div>
                    <div class="nav-hub-text">
                        <span class="nav-hub-label">Browse Events</span>
                        <span class="nav-hub-desc">Find & register for events</span>
                    </div>
                </a>

                <!-- Row 3 -->
                <a href="/donations" class="nav-hub-card">
                    <div class="nav-hub-icon-wrap" style="background-color: var(--pink-mid);">
                        <i class="fas fa-heart"></i>
                    </div>
                    <div class="nav-hub-text">
                        <span class="nav-hub-label">Donations</span>
                        <span class="nav-hub-desc">See our generous supporters</span>
                    </div>
                </a>

                <a href="/milestones" class="nav-hub-card">
                    <div class="nav-hub-icon-wrap" style="background-color: var(--purple);">
                        <i class="fas fa-trophy"></i>
                    </div>
                    <div class="nav-hub-text">
                        <span class="nav-hub-label">Milestones</span>
                        <span class="nav-hub-desc">Track your achievements</span>
                    </div>
                </a>
            <% } %>
        </div>
    </main>

    <%- include('partials/footer') %>
</body>
</html>
