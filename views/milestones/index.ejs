<!DOCTYPE html>
<html>
<head>
    <title>Manage Milestones - Ella Rises</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>
<body class="dashboard-body">
    <%- include('../partials/navbar') %>

    <main class="page-container">
        <div class="page-header">
            <div>
                <h1>Manage Milestones</h1>
                <p class="page-subtitle">View and manage participant milestones</p>
            </div>
            <a href="/milestones/add" class="btn-add">+ Add Milestone</a>
        </div>

        <!-- Search Bar -->
        <div class="search-bar">
            <i class="fas fa-search search-icon"></i>
            <input type="text" id="searchInput" placeholder="Search by participant name or milestone..." onkeyup="filterTable()">
            <span class="search-count"><span id="visibleCount"><%= milestones.length %></span> of <%= totalItems %> milestones</span>
        </div>

        <% if (milestones.length === 0) { %>
            <div class="empty-state">
                <p>No milestones recorded yet.</p>
            </div>
        <% } else { %>
            <div class="table-wrapper">
                <table class="data-table" id="milestonesTable">
                    <thead>
                        <tr>
                            <th>Participant</th>
                            <th>Milestone</th>
                            <th>Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% milestones.forEach(milestone => { %>
                            <tr>
                                <td><%= milestone.participant_first_name %> <%= milestone.participant_last_name %></td>
                                <td><strong><%= milestone.milestone_title %></strong></td>
                                <td><%= milestone.milestone_date ? new Date(milestone.milestone_date).toLocaleDateString() : '-' %></td>
                                <td class="actions">
                                    <a href="/milestones/edit/<%= milestone.milestone_id %>" class="btn-edit">Edit</a>
                                    <form action="/milestones/delete/<%= milestone.milestone_id %>" method="POST" class="inline-form" onsubmit="return confirm('Delete this milestone?');">
                                        <button type="submit" class="btn-delete">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            <% if (totalPages > 1) { %>
                <div class="pagination">
                    <% if (currentPage > 1) { %>
                        <a href="/milestones?page=<%= currentPage - 1 %>" class="pagination-btn"><i class="fas fa-chevron-left"></i> Previous</a>
                    <% } %>
                    
                    <span class="page-info">Page <%= currentPage %> of <%= totalPages %></span>
                    
                    <% if (currentPage < totalPages) { %>
                        <a href="/milestones?page=<%= currentPage + 1 %>" class="pagination-btn">Next <i class="fas fa-chevron-right"></i></a>
                    <% } %>
                </div>
            <% } %>
        <% } %>
    </main>

    <%- include('../partials/footer') %>

    <script>
        function filterTable() {
            const input = document.getElementById('searchInput');
            const filter = input.value.toLowerCase();
            const table = document.getElementById('milestonesTable');
            const rows = table.getElementsByTagName('tbody')[0].getElementsByTagName('tr');
            let visibleCount = 0;

            for (let i = 0; i < rows.length; i++) {
                const cells = rows[i].getElementsByTagName('td');
                let found = false;
                
                // Search in participant name and milestone title columns (0, 1)
                for (let j of [0, 1]) {
                    if (cells[j]) {
                        const text = cells[j].textContent || cells[j].innerText;
                        if (text.toLowerCase().indexOf(filter) > -1) {
                            found = true;
                            break;
                        }
                    }
                }
                
                rows[i].style.display = found ? '' : 'none';
                if (found) visibleCount++;
            }

            document.getElementById('visibleCount').textContent = visibleCount;
        }
    </script>
</body>
</html>
