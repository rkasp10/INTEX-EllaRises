<!DOCTYPE html>
<html>
<head>
    <title>Manage Milestones - Ella Rises</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>
<body class="dashboard-body">
    <%- include('../partials/navbar') %>

    <main class="page-container">
        <div class="page-header">
            <div>
                <h1>Manage Milestones</h1>
                <p class="page-subtitle">View and manage participant milestones</p>
            </div>
            <a href="/milestones/add" class="btn-add">+ Add Milestone</a>
        </div>

        <!-- Search Bar -->
        <form class="search-bar" method="GET" action="/milestones" id="searchForm">
            <i class="fas fa-search search-icon"></i>
            <input type="text" name="search" id="searchInput" placeholder="Search by participant name or milestone..." value="<%= typeof search !== 'undefined' ? search : '' %>" <%= (typeof search !== 'undefined' && search) ? 'autofocus' : '' %>>
            <% if (typeof search !== 'undefined' && search) { %>
                <a href="/milestones" class="search-clear">Clear</a>
            <% } %>
            <span class="search-count"><%= totalItems %> milestones<%= (typeof search !== 'undefined' && search) ? ' found' : '' %></span>
        </form>
        <script>
            let searchTimeout;
            const searchInput = document.getElementById('searchInput');
            searchInput.addEventListener('input', function() {
                clearTimeout(searchTimeout);
                searchTimeout = setTimeout(() => {
                    document.getElementById('searchForm').submit();
                }, 400);
            });
            if (searchInput.value) {
                searchInput.setSelectionRange(searchInput.value.length, searchInput.value.length);
            }
        </script>

        <% if (milestones.length === 0) { %>
            <div class="empty-state">
                <p>No milestones found<%= (typeof search !== 'undefined' && search) ? ' matching "' + search + '"' : '' %>.</p>
                <% if (typeof search !== 'undefined' && search) { %>
                    <p><a href="/milestones">Clear search</a></p>
                <% } %>
            </div>
        <% } else { %>
            <div class="table-wrapper">
                <table class="data-table" id="milestonesTable">
                    <thead>
                        <tr>
                            <th>Participant</th>
                            <th>Milestone</th>
                            <th>Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% milestones.forEach(milestone => { %>
                            <tr>
                                <td><%= milestone.participant_first_name %> <%= milestone.participant_last_name %></td>
                                <td><strong><%= milestone.milestone_title %></strong></td>
                                <td><%= milestone.milestone_date ? new Date(milestone.milestone_date).toLocaleDateString() : '-' %></td>
                                <td class="actions">
                                    <a href="/milestones/edit/<%= milestone.milestone_id %>" class="btn-edit">Edit</a>
                                    <form action="/milestones/delete/<%= milestone.milestone_id %>" method="POST" class="inline-form" onsubmit="return confirm('Delete this milestone?');">
                                        <button type="submit" class="btn-delete">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            <% if (totalPages > 1) { %>
                <%
                    let queryParams = '';
                    if (typeof search !== 'undefined' && search) queryParams += `search=${encodeURIComponent(search)}&`;
                %>
                <div class="pagination">
                    <% if (currentPage > 1) { %>
                        <a href="/milestones?<%= queryParams %>page=<%= currentPage - 1 %>" class="pagination-btn"><i class="fas fa-chevron-left"></i> Previous</a>
                    <% } %>
                    
                    <span class="page-info">Page <%= currentPage %> of <%= totalPages %></span>
                    
                    <% if (currentPage < totalPages) { %>
                        <a href="/milestones?<%= queryParams %>page=<%= currentPage + 1 %>" class="pagination-btn">Next <i class="fas fa-chevron-right"></i></a>
                    <% } %>
                </div>
            <% } %>
        <% } %>
    </main>

    <%- include('../partials/footer') %>
</body>
</html>
