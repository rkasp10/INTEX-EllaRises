<!DOCTYPE html>
<html>
<head>
    <title>My Milestones - Ella Rises</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body class="dashboard-body">
    <%- include('../partials/navbar') %>

    <main class="page-container">
        <div class="page-header">
            <h1>My Milestones</h1>
            <p class="page-subtitle">Track your achievements in Ella Rises</p>
        </div>

        <% if (milestones.length === 0) { %>
            <div class="empty-state">
                <p>No milestones achieved yet. Keep participating to earn milestones!</p>
            </div>
        <% } else { %>
            <div class="milestones-grid">
                <% milestones.forEach(milestone => { %>
                    <div class="milestone-card achieved">
                        <div class="milestone-icon-large">ğŸ†</div>
                        <h3><%= milestone.milestone_title %></h3>
                        <span class="milestone-date">Achieved <%= milestone.milestone_date ? new Date(milestone.milestone_date).toLocaleDateString() : '' %></span>
                    </div>
                <% }) %>
            </div>
        <% } %>
    </main>

    <%- include('../partials/footer') %>
</body>
</html>
