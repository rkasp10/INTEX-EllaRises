<!-- Shared navbar: shows nav links based on user role (manager vs participant)
     and login/logout controls. -->
<nav class="navbar">
  <div class="nav-left">
    <a href="/" class="nav-logo-link">
      <img src="/css/images/logo.png" alt="Ella Rises" class="nav-logo-small">
    </a>
  </div>

  <div class="nav-links">
    <% if (currentUser && currentUser.level === 'M') { %>
    <a href="/participants" class="nav-link">Participants</a>
    <% }  else { %>
      <a href="/participants" class="nav-link">Profile</a>
    <% } %>
    <a href="/events" class="nav-link">Events</a>
    <a href="/surveys" class="nav-link">Surveys</a>
    <a href="/milestones" class="nav-link">Milestones</a>
    <a href="/donations" class="nav-link">Donations</a>
    <% if (currentUser && currentUser.level === 'M') { %>
      <a href="/users" class="nav-link">Users</a>
    <% } %>
  </div>

  <div class="nav-right">
    <% if (!currentUser) { %>
      <a href="/login" class="nav-login-btn">Login</a>
    <% } else { %>
      <% if (currentUser.level === 'M') { %>
        <span class="nav-role-badge manager">Manager</span>
      <% } %>
      <span class="nav-user"><%= currentUser.username %></span>
      <form action="/logout" method="POST" style="display:inline;">
        <button type="submit" class="nav-logout-btn"><i class="fas fa-sign-out-alt"></i> Logout</button>
      </form>
    <% } %>
  </div>
</nav>
