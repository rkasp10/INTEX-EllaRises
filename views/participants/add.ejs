<!DOCTYPE html>
<html>
<head>
    <title>Add Participant - Ella Rises</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body class="dashboard-body">
    <%- include('../partials/navbar') %>

    <main class="page-container">
        <div class="page-header">
            <h1>Add Participant</h1>
        </div>

        <div class="form-card">
            <form action="/participants/add" method="POST" class="crud-form">
                <div class="form-row">
                    <div class="form-group">
                        <label for="participantfirstname">First Name</label>
                        <input type="text" id="participantfirstname" name="participantfirstname" required>
                    </div>
                    <div class="form-group">
                        <label for="participantlastname">Last Name</label>
                        <input type="text" id="participantlastname" name="participantlastname" required>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="participantemail">Email</label>
                        <input type="email" id="participantemail" name="participantemail" required>
                    </div>
                    <div class="form-group">
                        <label for="participantdob">Date of Birth</label>
                        <input type="date" id="participantdob" name="participantdob">
                    </div>
                </div>

                <div class="form-group">
                    <label for="participantphone">Phone</label>
                    <input type="tel" id="participantphone" name="participantphone">
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="participantcity">City</label>
                        <input type="text" id="participantcity" name="participantcity">
                    </div>
                    <div class="form-group">
                        <label for="participantstate">State</label>
                        <input type="text" id="participantstate" name="participantstate">
                    </div>
                    <div class="form-group">
                        <label for="participantzip">Zip</label>
                        <input type="text" id="participantzip" name="participantzip">
                    </div>
                </div>

                <div class="form-actions">
                    <a href="/participants" class="btn-cancel">Cancel</a>
                    <button type="submit" class="btn-submit">Add Participant</button>
                </div>
            </form>
        </div>
    </main>

    <%- include('../partials/footer') %>
</body>
</html>

