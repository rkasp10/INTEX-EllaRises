<!-- Edit Participant (manager): update a participant profile, including contact,
     school/employer, interest, and role. -->
<!DOCTYPE html>
<html>
<head>
    <title>Edit Participant - Ella Rises</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body class="dashboard-body">
    <%- include('../partials/navbar') %>

    <main class="page-container">
        <div class="form-page-wrapper">
        <div class="page-header">
            <h1>Edit Participant</h1>
        </div>

        <div class="form-card">
                <form action="/participants/edit/<%= participant.participant_id %>" method="POST" class="crud-form">
                <div class="form-row">
                    <div class="form-group">
                        <label for="participant_first_name">First Name</label>
                        <input type="text" id="participant_first_name" name="participant_first_name" value="<%= participant.participant_first_name %>" required>
                    </div>
                    <div class="form-group">
                        <label for="participant_last_name">Last Name</label>
                        <input type="text" id="participant_last_name" name="participant_last_name" value="<%= participant.participant_last_name %>" required>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="participant_email">Email</label>
                        <input type="email" id="participant_email" name="participant_email" value="<%= participant.participant_email %>" required>
                    </div>
                    <div class="form-group">
                        <label for="participant_dob">Date of Birth</label>
                        <input type="date" id="participant_dob" name="participant_dob" value="<%= participant.participant_dob ? new Date(participant.participant_dob).toISOString().split('T')[0] : '' %>">
                    </div>
                </div>

                <div class="form-group">
                    <label for="participant_phone">Phone</label>
                    <input type="tel" id="participant_phone" name="participant_phone" value="<%= participant.participant_phone || '' %>">
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="participant_city">City</label>
                        <input type="text" id="participant_city" name="participant_city" value="<%= participant.participant_city || '' %>">
                    </div>
                    <div class="form-group">
                        <label for="participant_state">State</label>
                        <select id="participant_state" name="participant_state">
                            <option value="">Select State</option>
                            <option value="AL" <%= participant.participant_state === 'AL' ? 'selected' : '' %>>Alabama</option>
                            <option value="AK" <%= participant.participant_state === 'AK' ? 'selected' : '' %>>Alaska</option>
                            <option value="AZ" <%= participant.participant_state === 'AZ' ? 'selected' : '' %>>Arizona</option>
                            <option value="AR" <%= participant.participant_state === 'AR' ? 'selected' : '' %>>Arkansas</option>
                            <option value="CA" <%= participant.participant_state === 'CA' ? 'selected' : '' %>>California</option>
                            <option value="CO" <%= participant.participant_state === 'CO' ? 'selected' : '' %>>Colorado</option>
                            <option value="CT" <%= participant.participant_state === 'CT' ? 'selected' : '' %>>Connecticut</option>
                            <option value="DE" <%= participant.participant_state === 'DE' ? 'selected' : '' %>>Delaware</option>
                            <option value="FL" <%= participant.participant_state === 'FL' ? 'selected' : '' %>>Florida</option>
                            <option value="GA" <%= participant.participant_state === 'GA' ? 'selected' : '' %>>Georgia</option>
                            <option value="HI" <%= participant.participant_state === 'HI' ? 'selected' : '' %>>Hawaii</option>
                            <option value="ID" <%= participant.participant_state === 'ID' ? 'selected' : '' %>>Idaho</option>
                            <option value="IL" <%= participant.participant_state === 'IL' ? 'selected' : '' %>>Illinois</option>
                            <option value="IN" <%= participant.participant_state === 'IN' ? 'selected' : '' %>>Indiana</option>
                            <option value="IA" <%= participant.participant_state === 'IA' ? 'selected' : '' %>>Iowa</option>
                            <option value="KS" <%= participant.participant_state === 'KS' ? 'selected' : '' %>>Kansas</option>
                            <option value="KY" <%= participant.participant_state === 'KY' ? 'selected' : '' %>>Kentucky</option>
                            <option value="LA" <%= participant.participant_state === 'LA' ? 'selected' : '' %>>Louisiana</option>
                            <option value="ME" <%= participant.participant_state === 'ME' ? 'selected' : '' %>>Maine</option>
                            <option value="MD" <%= participant.participant_state === 'MD' ? 'selected' : '' %>>Maryland</option>
                            <option value="MA" <%= participant.participant_state === 'MA' ? 'selected' : '' %>>Massachusetts</option>
                            <option value="MI" <%= participant.participant_state === 'MI' ? 'selected' : '' %>>Michigan</option>
                            <option value="MN" <%= participant.participant_state === 'MN' ? 'selected' : '' %>>Minnesota</option>
                            <option value="MS" <%= participant.participant_state === 'MS' ? 'selected' : '' %>>Mississippi</option>
                            <option value="MO" <%= participant.participant_state === 'MO' ? 'selected' : '' %>>Missouri</option>
                            <option value="MT" <%= participant.participant_state === 'MT' ? 'selected' : '' %>>Montana</option>
                            <option value="NE" <%= participant.participant_state === 'NE' ? 'selected' : '' %>>Nebraska</option>
                            <option value="NV" <%= participant.participant_state === 'NV' ? 'selected' : '' %>>Nevada</option>
                            <option value="NH" <%= participant.participant_state === 'NH' ? 'selected' : '' %>>New Hampshire</option>
                            <option value="NJ" <%= participant.participant_state === 'NJ' ? 'selected' : '' %>>New Jersey</option>
                            <option value="NM" <%= participant.participant_state === 'NM' ? 'selected' : '' %>>New Mexico</option>
                            <option value="NY" <%= participant.participant_state === 'NY' ? 'selected' : '' %>>New York</option>
                            <option value="NC" <%= participant.participant_state === 'NC' ? 'selected' : '' %>>North Carolina</option>
                            <option value="ND" <%= participant.participant_state === 'ND' ? 'selected' : '' %>>North Dakota</option>
                            <option value="OH" <%= participant.participant_state === 'OH' ? 'selected' : '' %>>Ohio</option>
                            <option value="OK" <%= participant.participant_state === 'OK' ? 'selected' : '' %>>Oklahoma</option>
                            <option value="OR" <%= participant.participant_state === 'OR' ? 'selected' : '' %>>Oregon</option>
                            <option value="PA" <%= participant.participant_state === 'PA' ? 'selected' : '' %>>Pennsylvania</option>
                            <option value="RI" <%= participant.participant_state === 'RI' ? 'selected' : '' %>>Rhode Island</option>
                            <option value="SC" <%= participant.participant_state === 'SC' ? 'selected' : '' %>>South Carolina</option>
                            <option value="SD" <%= participant.participant_state === 'SD' ? 'selected' : '' %>>South Dakota</option>
                            <option value="TN" <%= participant.participant_state === 'TN' ? 'selected' : '' %>>Tennessee</option>
                            <option value="TX" <%= participant.participant_state === 'TX' ? 'selected' : '' %>>Texas</option>
                            <option value="UT" <%= participant.participant_state === 'UT' ? 'selected' : '' %>>Utah</option>
                            <option value="VT" <%= participant.participant_state === 'VT' ? 'selected' : '' %>>Vermont</option>
                            <option value="VA" <%= participant.participant_state === 'VA' ? 'selected' : '' %>>Virginia</option>
                            <option value="WA" <%= participant.participant_state === 'WA' ? 'selected' : '' %>>Washington</option>
                            <option value="WV" <%= participant.participant_state === 'WV' ? 'selected' : '' %>>West Virginia</option>
                            <option value="WI" <%= participant.participant_state === 'WI' ? 'selected' : '' %>>Wisconsin</option>
                            <option value="WY" <%= participant.participant_state === 'WY' ? 'selected' : '' %>>Wyoming</option>
                            <option value="DC" <%= participant.participant_state === 'DC' ? 'selected' : '' %>>District of Columbia</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="participant_zip">Zip</label>
                        <input type="text" id="participant_zip" name="participant_zip" value="<%= participant.participant_zip || '' %>">
                    </div>
                </div>

                <div class="form-group">
                    <label for="participant_school_or_employer">School or Employer</label>
                    <input type="text" id="participant_school_or_employer" name="participant_school_or_employer" value="<%= participant.participant_school_or_employer || '' %>">
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="participant_field_of_interest">Field of Interest</label>
                        <select id="participant_field_of_interest" name="participant_field_of_interest">
                            <option value="">Select...</option>
                            <option value="STEM" <%= participant.participant_field_of_interest === 'STEM' ? 'selected' : '' %>>STEM</option>
                            <option value="Arts" <%= participant.participant_field_of_interest === 'Arts' ? 'selected' : '' %>>Arts</option>
                            <option value="Both" <%= participant.participant_field_of_interest === 'Both' ? 'selected' : '' %>>Both</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="participant_role">Role</label>
                        <select id="participant_role" name="participant_role">
                            <option value="participant" <%= (!participant.participant_role || participant.participant_role === 'participant') ? 'selected' : '' %>>Participant</option>
                            <option value="admin" <%= participant.participant_role === 'admin' ? 'selected' : '' %>>Admin</option>
                        </select>
                    </div>
                </div>

                <div class="form-actions">
                    <a href="/participants" class="btn-cancel">Cancel</a>
                    <button type="submit" class="btn-submit">Save Changes</button>
                </div>
            </form>
            </div>
        </div>
    </main>

    <%- include('../partials/footer') %>
</body>
</html>
