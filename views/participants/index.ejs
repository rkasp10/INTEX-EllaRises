<!DOCTYPE html>
<html>
<head>
    <title>Participants - Ella Rises</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body class="dashboard-body">
    <%- include('../partials/navbar') %>

    <main class="page-container">
        <div class="page-header">
            <div>
                <h1>Manage Participants</h1>
                <p class="page-subtitle">View and manage all program participants</p>
            </div>
            <a href="/participants/add" class="btn-add">+ Add Participant</a>
        </div>

        <% if (participants.length === 0) { %>
            <div class="empty-state">
                <p>No participants found.</p>
            </div>
        <% } else { %>
            <div class="table-wrapper">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>City</th>
                            <th>Role</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% participants.forEach(participant => { %>
                            <tr>
                                <td><%= participant.participant_first_name %> <%= participant.participant_last_name %></td>
                                <td><%= participant.participant_email %></td>
                                <td><%= participant.participant_phone || '-' %></td>
                                <td><%= participant.participant_city || '-' %></td>
                                <td>
                                    <span class="role-badge <%= participant.participant_role === 'admin' ? 'manager' : 'user' %>">
                                        <%= participant.participant_role || 'participant' %>
                                    </span>
                                </td>
                                <td class="actions">
                                    <a href="/participants/edit/<%= participant.participant_id %>" class="btn-edit">Edit</a>
                                    <form action="/participants/delete/<%= participant.participant_id %>" method="POST" class="inline-form" onsubmit="return confirm('Are you sure you want to delete this participant?');">
                                        <button type="submit" class="btn-delete">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        <% } %>
    </main>

    <%- include('../partials/footer') %>
</body>
</html>
