<!DOCTYPE html>
<html>
<head>
    <title>Participants - Ella Rises</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>
<body class="dashboard-body">
    <%- include('../partials/navbar') %>

    <main class="page-container">
        <div class="page-header">
            <div>
                <h1>Manage Participants</h1>
                <p class="page-subtitle">View and manage all program participants</p>
            </div>
            <a href="/participants/add" class="btn-add">+ Add Participant</a>
        </div>

        <!-- Search Bar -->
        <form class="search-bar" method="GET" action="/participants" id="searchForm">
            <i class="fas fa-search search-icon"></i>
            <input type="text" name="search" id="searchInput" placeholder="Search by name, email, or city..." value="<%= typeof search !== 'undefined' ? search : '' %>" <%= (typeof search !== 'undefined' && search) ? 'autofocus' : '' %>>
            <% if (typeof search !== 'undefined' && search) { %>
                <a href="/participants" class="search-clear">Clear</a>
            <% } %>
            <span class="search-count"><%= totalItems %> participants<%= (typeof search !== 'undefined' && search) ? ' found' : '' %></span>
        </form>
        <script>
            let searchTimeout;
            const searchInput = document.getElementById('searchInput');
            searchInput.addEventListener('input', function() {
                clearTimeout(searchTimeout);
                searchTimeout = setTimeout(() => {
                    document.getElementById('searchForm').submit();
                }, 400);
            });
            // Keep cursor at end of input after autofocus
            if (searchInput.value) {
                searchInput.setSelectionRange(searchInput.value.length, searchInput.value.length);
            }
        </script>

        <% if (participants.length === 0) { %>
            <div class="empty-state">
                <p>No participants found<%= (typeof search !== 'undefined' && search) ? ' matching "' + search + '"' : '' %>.</p>
                <% if (typeof search !== 'undefined' && search) { %>
                    <p><a href="/participants">Clear search</a></p>
                <% } %>
            </div>
        <% } else { %>
            <div class="table-wrapper">
                <table class="data-table" id="participantsTable">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>City</th>
                            <th>Interest</th>
                            <th>Role</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% participants.forEach(participant => { %>
                            <tr>
                                <td><%= participant.participant_first_name %> <%= participant.participant_last_name %></td>
                                <td><%= participant.participant_email %></td>
                                <td><%= participant.participant_phone || '-' %></td>
                                <td><%= participant.participant_city || '-' %></td>
                                <td><%= participant.participant_field_of_interest || '-' %></td>
                                <td>
                                    <span class="role-badge <%= participant.participant_role === 'admin' ? 'manager' : 'user' %>">
                                        <%= participant.participant_role || 'participant' %>
                                    </span>
                                </td>
                                <td class="actions">
                                    <a href="/participants/edit/<%= participant.participant_id %>" class="btn-edit">Edit</a>
                                    <form action="/participants/delete/<%= participant.participant_id %>" method="POST" class="inline-form" onsubmit="return confirm('Are you sure you want to delete this participant?');">
                                        <button type="submit" class="btn-delete">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            <% if (totalPages > 1) { %>
                <% const searchParam = (typeof search !== 'undefined' && search) ? `&search=${encodeURIComponent(search)}` : ''; %>
                <div class="pagination">
                    <% if (currentPage > 1) { %>
                        <a href="/participants?page=<%= currentPage - 1 %><%= searchParam %>" class="pagination-btn"><i class="fas fa-chevron-left"></i> Previous</a>
                    <% } %>
                    
                    <span class="page-info">Page <%= currentPage %> of <%= totalPages %></span>
                    
                    <% if (currentPage < totalPages) { %>
                        <a href="/participants?page=<%= currentPage + 1 %><%= searchParam %>" class="pagination-btn">Next <i class="fas fa-chevron-right"></i></a>
                    <% } %>
                </div>
            <% } %>
        <% } %>
    </main>

    <%- include('../partials/footer') %>
</body>
</html>
