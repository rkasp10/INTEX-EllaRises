<!DOCTYPE html>
<html>
<head>
    <title>My Profile - Ella Rises</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>
<body class="dashboard-body">
    <%- include('../partials/navbar') %>

    <main class="page-container">
        <div class="page-header">
            <h1>My Profile</h1>
        </div>

        <% if (!participant) { %>
            <div class="profile-card">
                <div class="profile-empty">
                    <h2>Welcome to Ella Rises!</h2>
                    <p>You haven't created your participant profile yet.</p>
                    <p>Please contact a program manager to get set up.</p>
                </div>
            </div>
        <% } else { %>
            <div class="profile-card">
                <div class="profile-header">
                    <div class="profile-avatar">
                        <%= participant.participant_first_name ? participant.participant_first_name.charAt(0) : '?' %><%= participant.participant_last_name ? participant.participant_last_name.charAt(0) : '' %>
                    </div>
                    <div class="profile-name">
                        <h2><%= participant.participant_first_name %> <%= participant.participant_last_name %></h2>
                        <p>Ella Rises Participant</p>
                    </div>
                </div>

                <div class="profile-details">
                    <div class="profile-detail">
                        <span class="detail-label">Email</span>
                        <span class="detail-value"><%= participant.participant_email %></span>
                    </div>
                    <div class="profile-detail">
                        <span class="detail-label">Phone</span>
                        <span class="detail-value"><%= participant.participant_phone || 'Not provided' %></span>
                    </div>
                    <div class="profile-detail">
                        <span class="detail-label">City</span>
                        <span class="detail-value"><%= participant.participant_city || 'Not provided' %></span>
                    </div>
                    <div class="profile-detail">
                        <span class="detail-label">State</span>
                        <span class="detail-value"><%= participant.participant_state || 'Not provided' %></span>
                    </div>
                </div>
            </div>

            <!-- Quick Links for Participants -->
            <div class="profile-links">
                <h3>Quick Links</h3>
                <div class="profile-links-grid">
                    <a href="/events" class="profile-link-card">
                        <div class="link-icon-wrap" style="background-color: var(--blue);">
                            <i class="fas fa-calendar-alt"></i>
                        </div>
                        <span class="link-text">View Events</span>
                    </a>
                    <a href="/surveys" class="profile-link-card">
                        <div class="link-icon-wrap" style="background-color: var(--peach);">
                            <i class="fas fa-clipboard-list"></i>
                        </div>
                        <span class="link-text">My Surveys</span>
                    </a>
                    <a href="/milestones" class="profile-link-card">
                        <div class="link-icon-wrap" style="background-color: var(--sage);">
                            <i class="fas fa-trophy"></i>
                        </div>
                        <span class="link-text">My Milestones</span>
                    </a>
                </div>
            </div>
        <% } %>
    </main>

    <%- include('../partials/footer') %>
</body>
</html>
