<!-- This is the public landing page that we see when first visiting the website. -->
<!-- pretty simple page to display the logo, mission, and pictures of the organization. -->
<!-- also includes the navbar, footer, and social media links. -->

<!DOCTYPE html>
<html lang="en">
<head>
  <title>Ella Rises - Empowering Young Women</title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>

<body class="landing-body">
  <%- include('partials/navbar') %>

  <!-- HERO SECTION -->
  <section class="landing-hero">

    <!-- HERO CONTENT -->
    <div class="landing-hero-content">
      <div class="landing-hero-text">
        <h1 class="landing-heading">Empowering Young Women to Rise</h1>
        <p class="landing-tagline">
          Ella Rises is dedicated to empowering young women ages 7-17 through hands-on 
          STEAM education, workshops, and mentorship programs that build confidence 
          and inspire future leaders.
        </p>
        <div class="landing-hero-buttons">
          <a href="/donations/donate" class="landing-btn-secondary">Donate</a>
          <a href="/register" class="landing-btn-primary">Click Here to Enroll</a>
        </div>
      </div>
      <div class="landing-hero-image">
        <img src="/css/images/EllaRisingCollage.jpeg" alt="Ella Rises Activities">
      </div>
    </div>
  </section>

  <!-- MISSION SECTION -->
  <section class="landing-mission">
    <div class="landing-mission-inner">
      <h2>Our Mission</h2>
      <p>
        Through culturally rooted programs and educational experiences, we help participants 
        develop critical thinking skills, embrace their heritage, and discover their potential 
        as future innovators. Your generous donations help us provide scholarships, materials, 
        and resources to ensure every young woman has the opportunity to rise and succeed.
      </p>
    </div>
  </section>

  <!-- FOOTER -->
  <footer class="landing-footer">
    <div class="footer-social">
      <a href="https://www.instagram.com/ellarises/" target="_blank" rel="noopener noreferrer" aria-label="Instagram">
        <i class="fab fa-instagram"></i>
      </a>
      <a href="https://www.facebook.com/EllaRises" target="_blank" rel="noopener noreferrer" aria-label="Facebook">
        <i class="fab fa-facebook-f"></i>
      </a>
    </div>
    <p>&copy; 2025 Ella Rises. All Rights Reserved.</p>
  </footer>

</body>
</html>
