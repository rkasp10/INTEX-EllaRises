<!DOCTYPE html>
<html>
<head>
    <title>Survey Responses - Ella Rises</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body class="dashboard-body">
    <%- include('../partials/navbar') %>

    <main class="page-container">
        <div class="page-header">
            <div>
                <h1>Survey Responses</h1>
                <p class="page-subtitle">View all post-event survey feedback</p>
            </div>
        </div>

        <% if (surveys.length === 0) { %>
            <div class="empty-state">
                <p>No survey responses yet.</p>
            </div>
        <% } else { %>
            <div class="table-wrapper">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Event</th>
                            <th>Participant</th>
                            <th>Satisfaction</th>
                            <th>Usefulness</th>
                            <th>Instructor</th>
                            <th>Overall</th>
                            <th>Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% surveys.forEach(survey => { %>
                            <tr>
                                <td><%= survey.event_name || 'N/A' %></td>
                                <td><%= survey.participant_first_name ? survey.participant_first_name + ' ' + survey.participant_last_name : 'N/A' %></td>
                                <td><span class="rating-badge"><%= survey.survey_satisfaction_score %>/5</span></td>
                                <td><span class="rating-badge"><%= survey.survey_usefulness_score %>/5</span></td>
                                <td><span class="rating-badge"><%= survey.survey_instructor_score %>/5</span></td>
                                <td><span class="rating-badge recommend"><%= survey.survey_overall_score %>/5</span></td>
                                <td><%= survey.survey_submission_date ? new Date(survey.survey_submission_date).toLocaleDateString() : '-' %></td>
                                <td class="actions">
                                    <a href="/surveys/view/<%= survey.survey_id %>" class="btn-edit">View</a>
                                    <form action="/surveys/delete/<%= survey.survey_id %>" method="POST" class="inline-form" onsubmit="return confirm('Delete this response?');">
                                        <button type="submit" class="btn-delete">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        <% } %>
    </main>

    <%- include('../partials/footer') %>
</body>
</html>
