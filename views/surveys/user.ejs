<!-- this is the page that particpant level users will see. it just dipslays -->
<!-- surveys associated with events they have been to but haven't done yet. -->
<!-- And past surveys they have completed. -->

<!DOCTYPE html>
<html>
<head>
    <title>My Surveys - Ella Rises</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>
<body class="dashboard-body">
    <%- include('../partials/navbar') %>

    <main class="page-container">
        <div class="content-centered">
            <div class="page-header">
                <h1>My Surveys</h1>
            </div>

            <% if (pendingSurveys && pendingSurveys.length > 0) { %>
                <h3>Pending Surveys</h3>
                <% pendingSurveys.forEach(survey => { %>
                    <div class="survey-card pending">
                    <div class="survey-card-header">
                        <span class="survey-badge pending">Pending</span>
                        <h3><%= survey.event_name %></h3>
                    </div>
                    <p>Please share your feedback about this event!</p>
                    <a href="/surveys/fill/<%= survey.registration_id %>" class="btn-submit">Fill Survey</a>
                </div>
            <% }) %>
            <% } else { %>
                <div class="empty-state">
                    <div class="empty-state-icon">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <p>You're all caught up! No pending surveys.</p>
                </div>
            <% } %>
        </div>

        <% if (completedSurveys && completedSurveys.length > 0) { %>
            <div class="completed-surveys-section">
                <h3>Completed Surveys</h3>
                <div class="table-wrapper">
                    <table class="data-table compact">
                        <thead>
                            <tr>
                                <th>Event</th>
                                <th>Overall</th>
                                <th>Date</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% completedSurveys.forEach(survey => { %>
                                <tr>
                                    <td><%= survey.event_name %></td>
                                    <td><span class="rating-badge"><%= survey.survey_overall_score %>/5</span></td>
                                    <td><%= survey.survey_submission_date ? new Date(survey.survey_submission_date).toLocaleDateString() : '-' %></td>
                                    <td><a href="/surveys/view/<%= survey.survey_id %>" class="btn-edit">View</a></td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        <% } %>
    </main>

    <%- include('../partials/footer') %>
</body>
</html>
