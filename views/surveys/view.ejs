<!DOCTYPE html>
<html>
<head>
    <title>View Survey - Ella Rises</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body class="dashboard-body">
    <%- include('../partials/navbar') %>

    <main class="page-container">
        <div class="page-header">
            <h1>Survey Response</h1>
        </div>

        <div class="form-card">
            <div class="survey-view">
                <div class="survey-view-header">
                    <h2><%= survey.event_name || 'Event Survey' %></h2>
                    <p>Submitted by <%= survey.participant_first_name %> <%= survey.participant_last_name %> on <%= survey.survey_submission_date ? new Date(survey.survey_submission_date).toLocaleDateString() : 'N/A' %></p>
                </div>

                <div class="survey-scores">
                    <div class="score-item">
                        <span class="score-label">Satisfaction</span>
                        <span class="score-value"><%= survey.survey_satisfaction_score %>/5</span>
                    </div>
                    <div class="score-item">
                        <span class="score-label">Usefulness</span>
                        <span class="score-value"><%= survey.survey_usefulness_score %>/5</span>
                    </div>
                    <div class="score-item">
                        <span class="score-label">Instructor</span>
                        <span class="score-value"><%= survey.survey_instructor_score %>/5</span>
                    </div>
                    <div class="score-item">
                        <span class="score-label">Overall Score</span>
                        <span class="score-value highlight"><%= survey.survey_overall_score %>/5</span>
                    </div>
                </div>

                <% if (survey.survey_comments) { %>
                    <div class="survey-comments">
                        <h4>Comments</h4>
                        <p>"<%= survey.survey_comments %>"</p>
                    </div>
                <% } %>

                <div class="form-actions">
                    <a href="/surveys" class="btn-cancel">‚Üê Back to Surveys</a>
                </div>
            </div>
        </div>
    </main>

    <%- include('../partials/footer') %>
</body>
</html>
