<!DOCTYPE html>
<html>
<head>
    <title>Add User - Ella Rises</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body class="dashboard-body">
    <%- include('../partials/navbar') %>

    <main class="page-container">
        <div class="form-page-wrapper">
            <div class="page-header">
                <h1>Add User</h1>
            </div>

            <div class="form-card">
            <form action="/users/add" method="POST" class="crud-form">
                <div class="form-group">
                    <label for="username">Username</label>
                    <input type="text" id="username" name="username" required>
                </div>

                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" required>
                </div>

                <div class="form-group">
                    <label for="participant_id">Link to Participant (Optional)</label>
                    <select id="participant_id" name="participant_id">
                        <option value="">-- No Participant Link --</option>
                        <% if (participants && participants.length > 0) { %>
                            <% participants.forEach(p => { %>
                                <option value="<%= p.participant_id %>"><%= p.participant_first_name %> <%= p.participant_last_name %> (<%= p.participant_email %>)</option>
                            <% }) %>
                        <% } %>
                    </select>
                    <small>Only participants without existing user accounts are shown</small>
                </div>

                <div class="form-actions">
                    <a href="/users" class="btn-cancel">Cancel</a>
                    <button type="submit" class="btn-submit">Create User</button>
                </div>
                </form>
            </div>
        </div>
    </main>

    <%- include('../partials/footer') %>
</body>
</html>
