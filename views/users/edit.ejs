<!DOCTYPE html>
<html>
<head>
    <title>Edit User - Ella Rises</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body class="dashboard-body">
    <%- include('../partials/navbar') %>

    <main class="page-container">
        <div class="page-header">
            <h1>Edit User</h1>
        </div>

        <div class="form-card">
            <form action="/users/edit/<%= user.user_id %>" method="POST" class="crud-form">
                <div class="form-group">
                    <label for="username">Username</label>
                    <input type="text" id="username" name="username" value="<%= user.username %>" required>
                </div>

                <div class="form-group">
                    <label for="password">New Password (leave blank to keep current)</label>
                    <input type="password" id="password" name="password">
                </div>

                <div class="form-group">
                    <label for="participant_id">Link to Participant</label>
                    <select id="participant_id" name="participant_id">
                        <option value="">-- No Participant Link --</option>
                        <% if (participants && participants.length > 0) { %>
                            <% participants.forEach(p => { %>
                                <option value="<%= p.participant_id %>" <%= user.participant_id === p.participant_id ? 'selected' : '' %>><%= p.participant_first_name %> <%= p.participant_last_name %> (<%= p.participant_email %>)</option>
                            <% }) %>
                        <% } %>
                    </select>
                </div>

                <div class="form-actions">
                    <a href="/users" class="btn-cancel">Cancel</a>
                    <button type="submit" class="btn-submit">Save Changes</button>
                </div>
            </form>
        </div>
    </main>

    <%- include('../partials/footer') %>
</body>
</html>
