<!DOCTYPE html>
<html>
<head>
    <title>User Management - Ella Rises</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>
<body class="dashboard-body">
    <%- include('../partials/navbar') %>

    <main class="page-container">
        <div class="page-header">
            <div>
                <h1>User Management</h1>
                <p class="page-subtitle">Manage system users and permissions</p>
            </div>
            <a href="/users/add" class="btn-add">+ Add User</a>
        </div>

        <!-- Search Bar -->
        <form class="search-bar" method="GET" action="/users" id="searchForm">
            <i class="fas fa-search search-icon"></i>
            <input type="text" name="search" id="searchInput" placeholder="Search by username, name, or email..." value="<%= typeof search !== 'undefined' ? search : '' %>" <%= (typeof search !== 'undefined' && search) ? 'autofocus' : '' %>>
            <% if (typeof search !== 'undefined' && search) { %>
                <a href="/users" class="search-clear">Clear</a>
            <% } %>
            <span class="search-count"><%= totalItems %> users<%= (typeof search !== 'undefined' && search) ? ' found' : '' %></span>
        </form>
        <script>
            let searchTimeout;
            const searchInput = document.getElementById('searchInput');
            searchInput.addEventListener('input', function() {
                clearTimeout(searchTimeout);
                searchTimeout = setTimeout(() => {
                    document.getElementById('searchForm').submit();
                }, 400);
            });
            if (searchInput.value) {
                searchInput.setSelectionRange(searchInput.value.length, searchInput.value.length);
            }
        </script>

        <% if (users.length === 0) { %>
            <div class="empty-state">
                <p>No users found<%= (typeof search !== 'undefined' && search) ? ' matching "' + search + '"' : '' %>.</p>
                <% if (typeof search !== 'undefined' && search) { %>
                    <p><a href="/users">Clear search</a></p>
                <% } %>
            </div>
        <% } else { %>
            <div class="table-wrapper">
                <table class="data-table" id="usersTable">
                    <thead>
                        <tr>
                            <th>Username</th>
                            <th>Linked Participant</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach(user => { %>
                            <tr>
                                <td><strong><%= user.username %></strong></td>
                                <td><%= user.participant_first_name ? user.participant_first_name + ' ' + user.participant_last_name : '-' %></td>
                                <td><%= user.participant_email || '-' %></td>
                                <td>
                                    <span class="role-badge <%= user.participant_role === 'admin' ? 'manager' : 'user' %>">
                                        <%= user.participant_role === 'admin' ? 'Admin' : 'Participant' %>
                                    </span>
                                </td>
                                <td class="actions">
                                    <a href="/users/edit/<%= user.user_id %>" class="btn-edit">Edit</a>
                                    <form action="/users/delete/<%= user.user_id %>" method="POST" class="inline-form" onsubmit="return confirm('Delete this user?');">
                                        <button type="submit" class="btn-delete">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            <% if (totalPages > 1) { %>
                <%
                    let queryParams = '';
                    if (typeof search !== 'undefined' && search) queryParams += `search=${encodeURIComponent(search)}&`;
                %>
                <div class="pagination">
                    <% if (currentPage > 1) { %>
                        <a href="/users?<%= queryParams %>page=<%= currentPage - 1 %>" class="pagination-btn"><i class="fas fa-chevron-left"></i> Previous</a>
                    <% } %>
                    
                    <span class="page-info">Page <%= currentPage %> of <%= totalPages %></span>
                    
                    <% if (currentPage < totalPages) { %>
                        <a href="/users?<%= queryParams %>page=<%= currentPage + 1 %>" class="pagination-btn">Next <i class="fas fa-chevron-right"></i></a>
                    <% } %>
                </div>
            <% } %>
        <% } %>
    </main>

    <%- include('../partials/footer') %>
</body>
</html>
