<!DOCTYPE html>
<html>
<head>
    <title>User Management - Ella Rises</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>
<body class="dashboard-body">
    <%- include('../partials/navbar') %>

    <main class="page-container">
        <div class="page-header">
            <div>
                <h1>User Management</h1>
                <p class="page-subtitle">Manage system users and permissions</p>
            </div>
            <a href="/users/add" class="btn-add">+ Add User</a>
        </div>

        <!-- Search Bar -->
        <div class="search-bar">
            <i class="fas fa-search search-icon"></i>
            <input type="text" id="searchInput" placeholder="Search by username, name, or email..." onkeyup="filterTable()">
            <span class="search-count"><span id="visibleCount"><%= users.length %></span> of <%= users.length %> users</span>
        </div>

        <% if (users.length === 0) { %>
            <div class="empty-state">
                <p>No users found.</p>
            </div>
        <% } else { %>
            <div class="table-wrapper">
                <table class="data-table" id="usersTable">
                    <thead>
                        <tr>
                            <th>Username</th>
                            <th>Linked Participant</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach(user => { %>
                            <tr>
                                <td><strong><%= user.username %></strong></td>
                                <td><%= user.participant_first_name ? user.participant_first_name + ' ' + user.participant_last_name : '-' %></td>
                                <td><%= user.participant_email || '-' %></td>
                                <td>
                                    <span class="role-badge <%= user.participant_role === 'admin' ? 'manager' : 'user' %>">
                                        <%= user.participant_role === 'admin' ? 'Admin' : 'Participant' %>
                                    </span>
                                </td>
                                <td class="actions">
                                    <a href="/users/edit/<%= user.user_id %>" class="btn-edit">Edit</a>
                                    <form action="/users/delete/<%= user.user_id %>" method="POST" class="inline-form" onsubmit="return confirm('Delete this user?');">
                                        <button type="submit" class="btn-delete">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        <% } %>
    </main>

    <%- include('../partials/footer') %>

    <script>
        function filterTable() {
            const input = document.getElementById('searchInput');
            const filter = input.value.toLowerCase();
            const table = document.getElementById('usersTable');
            const rows = table.getElementsByTagName('tbody')[0].getElementsByTagName('tr');
            let visibleCount = 0;

            for (let i = 0; i < rows.length; i++) {
                const cells = rows[i].getElementsByTagName('td');
                let found = false;
                
                // Search in username, participant name, and email columns (0, 1, 2)
                for (let j of [0, 1, 2]) {
                    if (cells[j]) {
                        const text = cells[j].textContent || cells[j].innerText;
                        if (text.toLowerCase().indexOf(filter) > -1) {
                            found = true;
                            break;
                        }
                    }
                }
                
                rows[i].style.display = found ? '' : 'none';
                if (found) visibleCount++;
            }

            document.getElementById('visibleCount').textContent = visibleCount;
        }
    </script>
</body>
</html>
